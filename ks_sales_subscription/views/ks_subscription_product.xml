<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ks_subscription_product_template_form" model="ir.ui.view">
        <field name="name">product.template.event.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <div name="options" position="inside">
                <div>
                    <field name="ks_recurring_invoice"/>
                    <label for="ks_recurring_invoice"/>
                </div>
            </div>
        </field>
    </record>

    <record id="ks_sale_subscription_product_search_view_inherit" model="ir.ui.view">
        <field name="name">product.template.search.inherit</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='services']" position="before">
                <filter name="ks_filter_recurring" string="Is Subscription Products"
                        domain="[('ks_recurring_invoice', '=', True)]"/>
            </xpath>
        </field>
    </record>

    <record id="ks_product_template_form_recurring_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[1]" position="after">
                <page string="Subscription Plan" attrs="{'invisible': [('ks_recurring_invoice', '=', False)]}">
                    <group name="subscription_plan" string="Subscriptions Plan">
                        <field name="ks_subscription_plan_id"
                               attrs="{'required': [('ks_recurring_invoice', '=', True )]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <record id="ks_subscription_product_template_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">kanban,tree,form</field>
        <field name="view_id" ref="ks_sales_subscription.ks_sale_subscription_product_search_view_inherit"/>
        <field name="domain">[('ks_subscription_plan_id', '=', active_id)]</field>
        <field name="context">{"default_type": "service", "default_ks_recurring_invoice": True,
            "default_ks_subscription_plan_id": active_id}
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                No product found
            </p>
            <p>
                You will find here all the products related to this subscription template.
            </p>
        </field>
    </record>

    <record id="ks_product_subscription_plan_action" model="ir.actions.act_window">
        <field name="name">Subscription Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <!--        <field name="view_type">form</field>-->
        <field name="context">{"default_ks_recurring_invoice": True, "search_default_ks_filter_recurring": True,
            "default_type": "service"}
        </field>
        <field name="view_id" ref="product.product_template_tree_view"/>
        <field name="search_view_id" ref="ks_sales_subscription.ks_sale_subscription_product_search_view_inherit"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new product
            </p>
            <p>
                You must define a product for everything you purchase,
                whether it's a physical product, a consumable or services.
            </p>
        </field>
    </record>

    <menuitem id="ks_menu_sale_subscription_plan_product"
              action="ks_sales_subscription.ks_product_subscription_plan_action" sequence="2"
              parent="ks_sales_subscription.ks_menu_sale_subscription_view"/>


</odoo>
