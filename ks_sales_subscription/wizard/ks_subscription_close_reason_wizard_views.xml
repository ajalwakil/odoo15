<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View Subscriptions Close Reason wizard -->
    <record id="ks_subscription_reason_close_view_form" model="ir.ui.view">
        <field name="name">ks.subscription.close.reason.wizard.form</field>
        <field name="model">ks.subscription.close.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Close Reasons">
                <group class="oe_title">
                    <field name="ks_reason_close_id" string="Close Reason"/>
                </group>
                <footer>
                    <button name="ks_button_close" string="Submit" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
