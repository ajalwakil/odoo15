<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cc_media_sharing_wizard_view_form" model="ir.ui.view">
        <field name="name">cc.media.sharing.wizard.form</field>
        <field name="model">cc.media.sharing.wizard</field>
        <field name="arch" type="xml">
            <form string="Share Media">
                <group>
                    <group>
                        <field name="child_id"/>
                        <field name="media_type"/>
                    </group>
                    <group>
                        <field name="file" filename="filename" attrs="{'invisible':[('media_type','=','url')],'required':[('media_type','=','binary')]}"/>
                        <field name="filename" invisible="1"/>
                        <field name="url" attrs="{'invisible':[('media_type','=','binary')],'required':[('media_type','=','url')]}"/>
                    </group>
                </group>
                <group>
                    <field name="message"/>
                </group>
                <footer>
                    <button name="share_media" string="Share" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="cc_media_sharing_wizard_action" model="ir.actions.act_window">
        <field name="name">Share Media</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">cc.media.sharing.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cc_media_sharing_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>