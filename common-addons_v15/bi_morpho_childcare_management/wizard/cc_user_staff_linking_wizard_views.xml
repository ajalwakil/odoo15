<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cc_userstafflink_wizard_view_form" model="ir.ui.view">
        <field name="name">cc.userstafflink.wizard.form</field>
        <field name="model">cc.userstafflink.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="link_user" string="Link" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="cc_userstafflink_wizard_action" model="ir.actions.act_window">
        <field name="name">Link Staff to User</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">cc.userstafflink.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cc_userstafflink_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>