<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cc_addparent_wizard_view_form" model="ir.ui.view">
        <field name="name">cc.addparent.wizard.form</field>
        <field name="model">cc.addparent.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="is_create" invisible="1"/>
                        <field name="res_parent_id" attrs="{'required' : [('is_create','=',False)],'invisible': [('is_create','=',True)]}"/>
                        <field name="name" attrs="{'required' : [('is_create','=',True)]}"/>
                    </group>
                    <group>
                    </group>
                    <group name="personal_info" string="Personal Information">
                        <field name="parent_type"/>
                        <field name="phone"/>
                    </group>
                    <group name="contact_info" string="Contact Details">
                        <field name="mobile"/>
                        <field name="email" widget="email"/>
                    </group>
                </group>
                <footer>
                    <button name="add_parent" string="Add Existing Parent" type="object" class="btn btn-primary" attrs="{'invisible': [('is_create','=',True)]}"/>
                    <button name="add_parent" string="Add New Parent" type="object" class="btn btn-primary" attrs="{'invisible': [('is_create','=',False)]}"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="cc_addparent_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Parent</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">cc.addparent.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cc_addparent_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>