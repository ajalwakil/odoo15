<?xml version="1.0"?>
<odoo>
	<record id="cc_doctor_form_view" model="ir.ui.view">
        <field name="name">cc.doctor.view.form</field>
        <field name="model">cc.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctors">
            	<sheet>
                    <label class="oe_edit_only" for="name" string="Name"/>
                    <div class="oe_title"> 
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                        <group>
                            <field name="degree_id"/>
                        </group>
                    </group>
            	</sheet>
            </form>
        </field>
    </record>


	<record id="cc_doctor_tree_view" model="ir.ui.view">
        <field name="name">cc.doctor.view.tree</field>
        <field name="model">cc.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="phone"/>
                <field name="degree_id"/>
            </tree>
        </field>
    </record>

    <record id="cc_doctor_action" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">cc.doctor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>