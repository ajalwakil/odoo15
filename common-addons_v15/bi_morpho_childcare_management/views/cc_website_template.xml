                        <div t-if="user.cc_has_access(user,'re')" t-attf-class="#{'active' if re else ''}">
                            <a role="button" style="width:100%;text-align:left;" class="btn btn-default cc_report_menu" href="/my/cc/child/reports">Reports</a>
                        </div>
                        <div t-attf-class="#{'active' if chk else ''}">
                            <a role="button" style="width:100%;text-align:left;" class="btn btn-default cc_report_menu" href="/my/cc/childs/check">Check In/Out Child</a>
                        </div>
                    </nav>
                </div>
                <div id="layout_main_content" t-raw="0"></div>
            </div>
        </t>
    </template>

