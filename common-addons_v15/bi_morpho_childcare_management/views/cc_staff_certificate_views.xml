<?xml version="1.0"?>
<odoo>    
    <record id="cc_staff_certificate_form_view" model="ir.ui.view">
        <field name="name">cc.staff.certificate.view.form</field>
        <field name="model">cc.staff.certificate</field>
        <field name="arch" type="xml">
            <form string="Staff Certificate">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="certificate_by"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cc_staff_certificate_tree_view" model="ir.ui.view">
        <field name="name">cc.staff.certificate.view.tree</field>
        <field name="model">cc.staff.certificate</field>
        <field name="arch" type="xml">
            <tree string="Staff Certificate">
                <field name="name"/>
                <field name="certificate_by"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="cc_staff_certificate_action" model="ir.actions.act_window">
        <field name="name">Staff Certificate</field>
        <field name="res_model">cc.staff.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>