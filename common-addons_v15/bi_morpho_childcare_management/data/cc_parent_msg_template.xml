<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">

        <record id="parentmsg_alert_sms_template" model="sms.template">
            <field name="name">Parent Messages SMS</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="body">Updates</field>
        </record>


        <record id="parentmsg_alert_mail_template" model="mail.template">
            <field name="name">Parent Mail</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="email_from">{{(object.user_id.email_formatted or user.email_formatted)}}</field>
            <field name="email_to">{{object.get_parent_to_send(for_mail=True)}}</field>
            <field name="subject">Updates</field>
            <field name="body_html" type="html">
                <div style="margin:0px; padding:0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Updates
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>