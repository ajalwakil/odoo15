<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cc_activity_report" model="ir.actions.report">
            <field name="name">Child's Today's Activities</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bi_morpho_childcare_management.cc_activity_reports_template</field>
            <field name="report_file">bi_morpho_childcare_management.cc_activity_reports_template</field>
            <field name="print_report_name">(object.name + ' Today Activities')</field>
            <field name="binding_model_id" ref="model_res_partner"/>
            <field name="binding_type">report</field>
        </record>


        <record id="cc_nutrition_report" model="ir.actions.report">
            <field name="name">Child's Nutrition</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bi_morpho_childcare_management.cc_nutrition_reports_template</field>
            <field name="report_file">bi_morpho_childcare_management.cc_nutrition_reports_template</field>
            <field name="print_report_name">(object.name + ' Nutrition')</field>
            <field name="binding_model_id" ref="model_res_partner"/>
            <field name="binding_type">report</field>
        </record>


        <record id="cc_attendance_report" model="ir.actions.report">
            <field name="name">Attendance Reports</field>
            <field name="model">cc.attendance.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bi_morpho_childcare_management.cc_attendance_reports_template</field>
            <field name="report_file">bi_morpho_childcare_management.cc_attendance_reports_template</field>
            <field name="print_report_name">('Attendances')</field>
            <field name="binding_model_id" eval="False"/>
        </record>


        <record id="cc_child_attendance_reports" model="ir.actions.report">
            <field name="name">Child's Attendance Reports</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bi_morpho_childcare_management.cc_child_attendance_reports_template</field>
            <field name="report_file">bi_morpho_childcare_management.cc_child_attendance_reports_template</field>
            <field name="print_report_name">(object.name + ' Attendances')</field>
            <field name="binding_model_id" eval="False"/>
        </record>
    </data>
</odoo>
