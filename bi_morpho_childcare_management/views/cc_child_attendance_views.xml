<?xml version="1.0"?>
<odoo>
	<record id="cc_child_attendance_form_view" model="ir.ui.view">
        <field name="name">cc.child.attendance.view.form</field>
        <field name="model">cc.child.attendance</field>
        <field name="arch" type="xml">
            <form string="Children Attendances">
            	<sheet>
                    <group>
                        <group>
                    		<field name="child_id" context="{'default_is_child':True, 'form_view_ref':'bi_morpho_childcare_management.child_form_view'}"
                            options="{'no_create': 'True', 'no_create_edit': True}"/>
                            <field name="check_in"/>
                        </group>
                        <group>
                            <field name="check_out"/>
                            <field name="worked_hours" widget="float_time"/>
                        </group>
                    </group>
            	</sheet>
            </form>
        </field>
    </record>


	<record id="cc_child_attendance_tree_view" model="ir.ui.view">
        <field name="name">cc.child.attendance.view.tree</field>
        <field name="model">cc.child.attendance</field>
        <field name="arch" type="xml">
            <tree string="Children Attendances">
                <field name="child_id" context="{'default_is_child':True, 'form_view_ref':'bi_morpho_childcare_management.child_form_view'}"/>
                <field name="check_in"/>
                <field name="check_out"/>
                <field name="worked_hours" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="cc_child_attendance_action" model="ir.actions.act_window">
        <field name="name">Children Attendances</field>
        <field name="res_model">cc.child.attendance</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>