<?xml version="1.0"?>
<odoo>
    <record id="cc_parent_form_view" model="ir.ui.view">
        <field name="name">parent.view.form</field>
        <field name="model">res.partner</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <form string="Parents">
                <sheet>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_128&quot;}"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group name="personal_info" string="Personal Information">
                            <field name="parent_type" attrs="{'required':[('is_parent','=',True)]}"/>
                            <field name="is_parent" eval="True" invisible="1"/>
                            <field name="is_child" eval="False" invisible="1"/>
                        </group>
                        <group name="contact_info" string="Contact Details">
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email" widget="email" attrs="{'required' : [('is_parent','=',True)]}"/>
                        </group>
                    </group>
                    <group name="childs" string="Childs">
                        <field name="cc_child_ids" nolabel="1" context="{ 'form_view_ref':'bi_morpho_childcare_management.cc_parentchild_form_view',}">
                            <tree create="1">
                                <field name="cc_child_id"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="cc_parent_tree_view" model="ir.ui.view">
        <field name="name">parent.view.tree</field>
        <field name="model">res.partner</field>
        <field name="priority">50</field>
        <field name="arch" type="xml">
            <tree string="Childs / Students">
                <field name="name"/>
                <field name="parent_type"/>
                <field name="phone"/>
                <field name="mobile"/>
                <field name="email"/>
            </tree>
        </field>
    </record>


    <record id="cc_parent_action" model="ir.actions.act_window">
        <field name="name">Parents</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('is_parent','=',True)]</field>
        <field name="context">{'default_is_parent' : True,}</field>
    </record>

    <record id="cc_parent_form_action" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cc_parent_form_view"/>
        <field name="act_window_id" ref="cc_parent_action"/>
    </record>

    <record id="cc_parent_tree_action" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="cc_parent_tree_view"/>
        <field name="act_window_id" ref="cc_parent_action"/>
    </record>



    <record id="cc_parentchild_form_view" model="ir.ui.view">
        <field name="name">parentchild.view.form</field>
        <field name="model">res.partner.parentchild</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="cc_child_id" context="{'default_is_child':True, 'form_view_ref':'bi_morpho_childcare_management.child_form_view', 'tree_view_ref':'bi_morpho_childcare_management.cc_child_tree_view'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>