<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cc_lesson_plan_wizard_view_form" model="ir.ui.view">
        <field name="name">cc.lesson.plan.wizard.form</field>
        <field name="model">cc.lesson.plan.wizard</field>
        <field name="arch" type="xml">
            <form string="Add Lesson Plan">
                <group>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="start_datetime"/>
                        <field name="end_datetime"/>
                    </group>
                </group>
                <group name="lesson_plan" string="Lesson Plan">
                    <field name="lesson_plan" nolabel="1"/>
                </group>
                <footer>
                    <button name="add_lesson_plan" string="Add Lesson Plan" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="cc_lesson_plan_wizard_action" model="ir.actions.act_window">
        <field name="name">Add Lesson Plan</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">cc.lesson.plan.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cc_lesson_plan_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>