<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cc_attendance_wizard_view_form" model="ir.ui.view">
        <field name="name">cc.attendance.wizard.form</field>
        <field name="model">cc.attendance.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="attendance_of"/>
                        <field name="child_ids" attrs="{'invisible':[('attendance_of','=','staff')],'required':[('attendance_of','=','child')]}" widget="many2many_tags" domain="[('is_child','=',True)]" context="{'default_is_child':True, 'form_view_ref':'bi_morpho_childcare_management.child_form_view'}"/>
                        <field name="staff_ids" attrs="{'invisible':[('attendance_of','=','child')], 'required':[('attendance_of','=','staff')]}" widget="many2many_tags" domain="[('is_staff','=',True)]" context="{'default_is_staff':True,'form_view_ref':'bi_morpho_childcare_management.cc_staff_form_view'}"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                </group>
                <footer>
                    <button name="print_report" string="Print" type="object" class="btn btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="cc_attendance_wizard_action" model="ir.actions.act_window">
        <field name="name">Attendance Reports</field>
        <field name='type'>ir.actions.act_window</field>
        <field name="res_model">cc.attendance.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="cc_attendance_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>